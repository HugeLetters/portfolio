---
import "../styles/index.pcss";
import Head from "@components/head.astro";
import Header from "@components/header.astro";
import SectionLayout from "@layout/section.astro";
import About from "@components/section/about.astro";
import Projects from "@components/section/projects.astro";
import Contact from "@components/section/contact.astro";

const SECTIONS: Section[] = [
  { label: "About", id: "about", Component: About },
  { label: "Projects", id: "projects", Component: Projects },
  { label: "Contact", id: "contact", Component: Contact },
];
---

<!DOCTYPE html>
<html
  lang="en"
  class="bg-gradient-to-tr from-neutral-700 to-neutral-900 font-poppins text-slate-200 motion-safe:scroll-smooth sm:scroll-p-header"
>
  <Head />
  <body class="flex flex-col items-center">
    <Header sections={SECTIONS} />
    <main class="flex w-full flex-col items-stretch">
      {
        SECTIONS.map(({ Component, id }) => (
          <SectionLayout {id}>
            <Component />
          </SectionLayout>
        ))
      }
    </main>
  </body>
</html>
