---
type Props = { sections: Section[] };
const { sections } = Astro.props;
---

<nav class="max-w-fit">
  <ul class="grid min-h-full grid-cols-3 items-stretch">
    {
      sections.map(({ id: href, label }) => (
        <li>
          <a
            href={"#" + href}
            class="flex min-h-full items-center justify-center px-3 text-center text-lg transition-colors duration-300 hover:bg-theme-blue"
          >
            <span>{label}</span>
          </a>
        </li>
      ))
    }
  </ul>
</nav>
