---
import logo from "@assets/logo.png";
type Props = { sections: Section[] };
const { sections } = Astro.props;
---

<header class="top-0 z-50 flex h-20 justify-center self-stretch bg-theme-red sm:sticky sm:h-header">
  <div class="flex max-w-[1920px] grow justify-between">
    <div class="m-1 flex gap-4">
      <div class="group aspect-square">
        <div
          class="group-hover:translate-x-[100%] group-hover:translate-y-[100%] group-hover:scale-[3] motion-safe:transition-transform"
        >
          <img
            src={logo}
            alt="me at work"
            class="aspect-square rounded-full border-2"
          />
          <span
            class="whitespace-nowrap opacity-0 transition-opacity duration-700 group-hover:opacity-100"
            >me at work</span
          >
        </div>
      </div>
      <h1 class="self-center whitespace-nowrap text-xl sm:text-4xl">My Portfolio</h1>
    </div>
    <nav class="max-w-fit shrink-0">
      <ul class="grid min-h-full grid-rows-3 items-stretch sm:grid-cols-3 sm:grid-rows-1">
        {
          sections.map(({ id: href, label }) => (
            <li>
              <a
                href={"#" + href}
                class="text-md flex min-h-full items-center justify-center px-1 text-center transition-colors duration-300 hover:bg-theme-blue"
              >
                <span>{label}</span>
              </a>
            </li>
          ))
        }
      </ul>
    </nav>
  </div>
</header>
